.ForEach {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 4px;
  padding-bottom: 4px;
}

.ports {
  padding: 0;
}

.portValueContainer {
  width: 100%;
}

.button {
  padding: 4px 8px;
}

.emptyState {
  text-align: center;
  color: #525252;
  font-size: 10px;
  letter-spacing: 0;
  height: auto;
  padding: 0 8px;
  line-height: 24px;
}

.reloadIcon {
  display: inline-block;
  height: 10px;
  width: 10px;
  color: #CDCDCD;
  margin: 0 3px;
}
